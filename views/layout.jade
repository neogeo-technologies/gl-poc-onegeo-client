doctype html

html(ng-app='onegeo')
    head
        title= title
        base(href='/')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

        block link
            link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Montserrat')
            link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Raleway:400')
            link(rel='stylesheet', href='libs/bootstrap/dist/css/bootstrap.min.css')

        block script
            script(src='libs/angular/angular.min.js')
            script(src='libs/angular-animate/angular-animate.min.js')
            script(src='libs/angular-route/angular-route.min.js')
            script(src='libs/angular-sanitize/angular-sanitize.min.js')
            script(src='libs/angular-bootstrap/ui-bootstrap.min.js')
            script(src='libs/angular-bootstrap/ui-bootstrap-tpls.min.js')
            script(src='javascripts/app.js')
            script(src='javascripts/factories.js')
            script(src='javascripts/directives.js')
            script(src='javascripts/controllers.js')
            script(src='javascripts/tools.js')

    block content
